<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commodity Name"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/comm_name_TV"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commodity Price"
        android:textSize="15sp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="10dp"
        android:id="@+id/comm_price_TV"
        android:layout_below="@id/comm_name_TV"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commodity Quantity"
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:id="@+id/comm_quant_TV"
        android:layout_below="@id/comm_price_TV"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="+ 1"
        android:textSize="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:textColor="@color/cardview_light_background"
        android:id="@+id/add_comm_BT"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="- 1"
        android:textSize="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:id="@+id/remove_comm_BT"
        android:layout_below="@id/add_comm_BT"/>

</RelativeLayout>